<UserControl x:Class="Diffusion.Toolkit.Controls.FaceDetectionTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diffusion.Toolkit.Controls"
             xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <fa:IconImage Icon="Users" Width="16" Height="16" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,8,0"/>
                <TextBlock Text="Detected Faces" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding FaceCount, StringFormat=({0})}" FontSize="12" Foreground="{DynamicResource ForegroundBrushSecondary}" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Face Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Faces}" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Face Card -->
                        <Border Width="150" Height="220" Margin="5" 
                                Background="{DynamicResource BackgroundBrushSecondary}" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                MouseEnter="FaceCard_MouseEnter"
                                MouseLeave="FaceCard_MouseLeave"
                                Tag="{Binding}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="120"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Face Thumbnail -->
                                <Border Grid.Row="0" Margin="5" Background="Black" CornerRadius="3" Cursor="Hand" MouseDown="FaceThumbnail_Click">
                                    <Image Source="{Binding ThumbnailSource}" Stretch="Uniform"/>
                                </Border>

                                <!-- Face Info -->
                                <StackPanel Grid.Row="1" Margin="8,0,8,8">
                                    <!-- Face ID/Name (Editable) -->
                                    <Grid Margin="0,0,0,4">
                                        <TextBox Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}" 
                                                 FontWeight="SemiBold"
                                                 FontSize="12"
                                                 Foreground="{DynamicResource ForegroundBrush}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Padding="0"
                                                 VerticalAlignment="Center"
                                                 TextAlignment="Center"
                                                 LostFocus="GroupName_LostFocus"
                                                 KeyDown="GroupName_KeyDown"
                                                 Tag="{Binding}">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrushSecondary}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding HasGroupName}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </Grid>

                                    <!-- Match Count -->
                                    <TextBlock Foreground="{DynamicResource ForegroundBrushSecondary}" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,2">
                                        <Run Text="{Binding MatchCount, Mode=OneWay}"/>
                                        <Run Text=" matches"/>
                                    </TextBlock>

                                    <!-- Confidence Score -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,2">
                                        <fa:IconImage Icon="ChartLine" Width="10" Height="10" Foreground="{DynamicResource ForegroundBrushSecondary}" Margin="0,0,3,0"/>
                                        <TextBlock Text="{Binding Confidence, StringFormat={}{0:P0}}" FontSize="10" Foreground="{DynamicResource ForegroundBrushSecondary}"/>
                                    </StackPanel>

                                    <!-- Embedding Status -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,2">
                                        <fa:IconImage Width="10" Height="10" Margin="0,0,3,0">
                                            <fa:IconImage.Style>
                                                <Style TargetType="fa:IconImage">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasEmbedding}" Value="True">
                                                            <Setter Property="Icon" Value="Check"/>
                                                            <Setter Property="Foreground" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HasEmbedding}" Value="False">
                                                            <Setter Property="Icon" Value="Times"/>
                                                            <Setter Property="Foreground" Value="Gray"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </fa:IconImage.Style>
                                        </fa:IconImage>
                                        <TextBlock Text="Embedding" FontSize="10" Foreground="{DynamicResource ForegroundBrushSecondary}"/>
                                    </StackPanel>

                                    <!-- Expression/Emotion (if available) -->
                                    <TextBlock Text="{Binding Expression}" 
                                               FontSize="9" 
                                               Foreground="{DynamicResource ForegroundBrushSecondary}" 
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding HasExpression, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding HasFaces, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <fa:IconImage Icon="FaceSmile" Width="64" Height="64" Foreground="{DynamicResource ForegroundBrushSecondary}" Opacity="0.3"/>
            <TextBlock Text="No faces detected" 
                       FontSize="14" 
                       Foreground="{DynamicResource ForegroundBrushSecondary}" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
