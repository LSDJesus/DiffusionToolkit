<Window x:Class="Diffusion.Toolkit.Windows.FaceGalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Face Gallery - Character Recognition" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Face Gallery" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"/>
                    <TextBlock x:Name="StatsText" Text="Loading statistics..." FontSize="12" 
                               Foreground="{DynamicResource ForegroundBrush}" Opacity="0.7"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox x:Name="SearchBox" Width="200" Margin="0,0,10,0" 
                             ToolTip="Search characters by name"/>
                    <Button x:Name="RefreshButton" Content="âŸ³ Refresh" Padding="10,5" 
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cluster List -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="{DynamicResource SecondaryBrush}" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Clusters" FontWeight="Bold" FontSize="14" 
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <RadioButton x:Name="AllClustersRadio" Content="All" IsChecked="True" 
                                             Margin="0,0,10,0" Foreground="{DynamicResource ForegroundBrush}"
                                             Checked="FilterRadio_Checked"/>
                                <RadioButton x:Name="LabeledRadio" Content="Labeled" 
                                             Margin="0,0,10,0" Foreground="{DynamicResource ForegroundBrush}"
                                             Checked="FilterRadio_Checked"/>
                                <RadioButton x:Name="UnlabeledRadio" Content="Unlabeled" 
                                             Foreground="{DynamicResource ForegroundBrush}"
                                             Checked="FilterRadio_Checked"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <ListBox x:Name="ClusterList" Grid.Row="1" 
                             Background="{DynamicResource BackgroundBrush}"
                             BorderThickness="0"
                             SelectionChanged="ClusterList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,8" BorderThickness="0,0,0,1" 
                                        BorderBrush="{DynamicResource BorderBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Cluster Thumbnail -->
                                        <Border Grid.Column="0" Width="45" Height="45" 
                                                Background="{DynamicResource SecondaryBrush}"
                                                CornerRadius="5" Margin="0,0,10,0">
                                            <Image x:Name="ClusterThumbnail" Stretch="UniformToFill"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayLabel}" FontWeight="SemiBold" 
                                                       Foreground="{DynamicResource ForegroundBrush}"/>
                                            <TextBlock Foreground="{DynamicResource ForegroundBrush}" 
                                                       Opacity="0.7" FontSize="11">
                                                <Run Text="{Binding FaceCount}"/>
                                                <Run Text=" faces"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Faces Grid -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Cluster Header -->
                <Border Grid.Row="0" Background="{DynamicResource SecondaryBrush}" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="ClusterLabel" Text="Select a cluster" FontSize="16" 
                                       FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}"
                                       VerticalAlignment="Center"/>
                            <Button x:Name="EditLabelButton" Content="âœï¸" Margin="10,0,0,0" 
                                    ToolTip="Edit label" Visibility="Collapsed"
                                    Click="EditLabelButton_Click"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="MergeClustersButton" Content="Merge Selected" 
                                    Padding="10,5" Margin="0,0,5,0" IsEnabled="False"
                                    Click="MergeClustersButton_Click"/>
                            <Button x:Name="AssignLabelButton" Content="Set Label" 
                                    Padding="10,5" IsEnabled="False"
                                    Click="AssignLabelButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Face Thumbnails -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="FacesGrid">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" Background="{DynamicResource SecondaryBrush}"
                                        CornerRadius="5" Padding="5" 
                                        MouseLeftButtonDown="FaceItem_Click">
                                    <Grid Width="100">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0" CornerRadius="5" ClipToBounds="True">
                                            <Image Source="{Binding Thumbnail}" Stretch="UniformToFill"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Row="1" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding ConfidenceDisplay}" FontSize="10" 
                                                       Foreground="{DynamicResource ForegroundBrush}" 
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding QualityDisplay}" FontSize="10" 
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       Opacity="0.7" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Empty State -->
                <Border x:Name="EmptyState" Grid.Row="1" Visibility="Visible">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ‘¤" FontSize="48" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   Opacity="0.3" HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a cluster to view faces" FontSize="16" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   Opacity="0.5" Margin="0,15,0,0"/>
                        <TextBlock Text="Or run face detection on your images first" FontSize="12" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   Opacity="0.3" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource PrimaryBrush}" Padding="10,5">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Ready" FontSize="11" 
                           Foreground="{DynamicResource ForegroundBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
