<local:NavigationPage x:Class="Diffusion.Toolkit.Pages.FaceGallery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diffusion.Toolkit.Pages"
      xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
      xmlns:converters="clr-namespace:Diffusion.Toolkit.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Face Gallery">
    
    <local:NavigationPage.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </local:NavigationPage.Resources>
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" Width="80" Height="32" Click="BackButton_Click" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="ArrowLeft" Width="12" Height="12" Margin="0,0,5,0"/>
                        <TextBlock Text="Back" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Title -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="Users" Width="20" Height="20" Foreground="{DynamicResource AccentBrush}" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding GroupName}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding FaceCount, StringFormat=' - {0} faces'}" FontSize="14" Foreground="{DynamicResource ForegroundBrushSecondary}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Width="32" Height="32" ToolTip="Rename Group" Click="RenameGroup_Click" Margin="0,0,5,0">
                        <fa:IconImage Icon="Edit" Width="14" Height="14"/>
                    </Button>
                    <Button Width="32" Height="32" ToolTip="Delete Group" Click="DeleteGroup_Click">
                        <fa:IconImage Icon="Trash" Width="14" Height="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats Bar -->
        <Border Grid.Row="1" Background="{DynamicResource BackgroundBrushSecondary}" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <fa:IconImage Icon="Image" Width="14" Height="14" Foreground="{DynamicResource ForegroundBrushSecondary}" Margin="0,0,5,0"/>
                    <TextBlock Text="Images: " Foreground="{DynamicResource ForegroundBrushSecondary}" FontSize="12"/>
                    <TextBlock Text="{Binding UniqueImageCount}" Foreground="{DynamicResource ForegroundBrush}" FontSize="12" FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <fa:IconImage Icon="ChartLine" Width="14" Height="14" Foreground="{DynamicResource ForegroundBrushSecondary}" Margin="0,0,5,0"/>
                    <TextBlock Text="Avg Confidence: " Foreground="{DynamicResource ForegroundBrushSecondary}" FontSize="12"/>
                    <TextBlock Text="{Binding AvgConfidence, StringFormat={}{0:P0}}" Foreground="{DynamicResource ForegroundBrush}" FontSize="12" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Star" Width="14" Height="14" Foreground="{DynamicResource ForegroundBrushSecondary}" Margin="0,0,5,0"/>
                    <TextBlock Text="Avg Quality: " Foreground="{DynamicResource ForegroundBrushSecondary}" FontSize="12"/>
                    <TextBlock Text="{Binding AvgQualityScore, StringFormat={}{0:F2}}" Foreground="{DynamicResource ForegroundBrush}" FontSize="12" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Face Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
            <ItemsControl ItemsSource="{Binding Faces}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Face Card with Image Preview -->
                        <Border Width="180" Height="240" Margin="8" 
                                Background="{DynamicResource BackgroundBrushSecondary}" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Cursor="Hand"
                                MouseDown="FaceCard_Click"
                                Tag="{Binding}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Face Crop -->
                                <Border Grid.Row="0" Margin="5" Background="Black" CornerRadius="3">
                                    <Image Source="{Binding FaceCropSource}" Stretch="Uniform"/>
                                </Border>

                                <!-- Image Info -->
                                <StackPanel Grid.Row="1" Margin="8">
                                    <!-- Image File Name -->
                                    <TextBlock Text="{Binding ImageFileName}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource ForegroundBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               HorizontalAlignment="Center"
                                               ToolTip="{Binding ImagePath}"/>

                                    <!-- Image Dimensions -->
                                    <TextBlock FontSize="9" 
                                               Foreground="{DynamicResource ForegroundBrushSecondary}" 
                                               HorizontalAlignment="Center"
                                               Margin="0,2,0,0">
                                        <Run Text="{Binding ImageWidth, Mode=OneWay}"/>
                                        <Run Text="Ã—"/>
                                        <Run Text="{Binding ImageHeight, Mode=OneWay}"/>
                                    </TextBlock>

                                    <!-- Confidence & Quality -->
                                    <Grid Margin="0,4,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <fa:IconImage Icon="ChartLine" Width="8" Height="8" Foreground="{DynamicResource ForegroundBrushSecondary}" Margin="0,0,2,0"/>
                                            <TextBlock Text="{Binding Confidence, StringFormat={}{0:P0}}" FontSize="9" Foreground="{DynamicResource ForegroundBrushSecondary}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <fa:IconImage Icon="Star" Width="8" Height="8" Foreground="{DynamicResource ForegroundBrushSecondary}" Margin="0,0,2,0"/>
                                            <TextBlock Text="{Binding QualityScore, StringFormat={}{0:F1}}" FontSize="9" Foreground="{DynamicResource ForegroundBrushSecondary}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Similarity Score -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                        <fa:IconImage Icon="Fingerprint" Width="8" Height="8" Foreground="{DynamicResource AccentBrush}" Margin="0,0,2,0"/>
                                        <TextBlock Text="{Binding SimilarityScore, StringFormat=Similarity: {0:P0}}" FontSize="9" Foreground="{DynamicResource AccentBrush}"/>
                                    </StackPanel>

                                    <!-- Confirm/Reject Buttons -->
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" Height="24" 
                                                Background="#4CAF50" 
                                                BorderThickness="0"
                                                Click="ConfirmMatch_Click" 
                                                Tag="{Binding FaceId}"
                                                ToolTip="Confirm this face belongs to this group">
                                            <StackPanel Orientation="Horizontal">
                                                <fa:IconImage Icon="Check" Width="10" Height="10" Foreground="White" Margin="0,0,3,0"/>
                                                <TextBlock Text="Confirm" FontSize="9" Foreground="White" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Button>

                                        <Button Grid.Column="2" Height="24" 
                                                Background="#F44336" 
                                                BorderThickness="0"
                                                Click="RejectMatch_Click" 
                                                Tag="{Binding FaceId}"
                                                ToolTip="Remove this face from this group">
                                            <StackPanel Orientation="Horizontal">
                                                <fa:IconImage Icon="Times" Width="10" Height="10" Foreground="White" Margin="0,0,3,0"/>
                                                <TextBlock Text="Reject" FontSize="9" Foreground="White" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="#CC000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <fa:IconImage Icon="CircleNotch" Width="48" Height="48" Foreground="White"/>
                <TextBlock Text="Loading faces..." FontSize="14" Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</local:NavigationPage>
