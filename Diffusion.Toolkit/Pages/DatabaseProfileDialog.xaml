<Window x:Class="Diffusion.Toolkit.Pages.DatabaseProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Database Profile" Height="460" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Database Profile Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Profile Name:"/>
            <TextBox x:Name="ProfileNameTextBox" Height="25"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Description (optional):"/>
            <TextBox x:Name="DescriptionTextBox" Height="25"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <Label Content="Connection String:"/>
            <TextBox x:Name="ConnectionStringTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <TextBlock Text="Example: Host=localhost;Port=5436;Database=luna_narrated;Username=luna;Password=..." 
                       FontSize="10" Opacity="0.6" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <Label Content="Schema:"/>
            <TextBox x:Name="SchemaTextBox" Height="25" Text="public"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <Label Content="Color (for UI):"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="ColorTextBox" Width="100" Height="25" Text="#4CAF50"/>
                <Rectangle Width="30" Height="25" Margin="10,0,0,0" Stroke="Gray" StrokeThickness="1">
                    <Rectangle.Fill>
                        <SolidColorBrush Color="{Binding ElementName=ColorTextBox, Path=Text, FallbackValue=#4CAF50}"/>
                    </Rectangle.Fill>
                </Rectangle>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="0,0,0,10">
            <CheckBox x:Name="ReadOnlyCheckBox" Content="Read-Only Mode (for viewing other project databases)" 
                      ToolTip="Enable read-only mode to prevent accidental modifications to shared databases"/>
        </StackPanel>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="TestConnectionButton" Content="Test Connection" Width="120" Height="30" Margin="0,0,10,0" Click="TestConnection_Click"/>
            <Button x:Name="OkButton" Content="OK" Width="80" Height="30" Margin="0,0,10,0" Click="Ok_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
