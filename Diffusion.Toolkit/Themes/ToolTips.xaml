<ResourceDictionary  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <system:Int32 x:Key="ToolTipDelay">500</system:Int32>

    <Style TargetType="Button">
        <Setter Property="ToolTipService.InitialShowDelay" Value="{DynamicResource ToolTipDelay}"/>
    </Style>
    <Style TargetType="fa:IconImage">
        <Setter Property="ToolTipService.InitialShowDelay" Value="{DynamicResource ToolTipDelay}"/>
    </Style>

</ResourceDictionary>
